{
  "manifest_version": 3,
  "name": "ColorShift",
  "version": "0.1.0",
  "description": "Recolor greyscale elements",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "recolor.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "color-shift@example.com",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  }
}